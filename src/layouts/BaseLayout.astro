---
import '~/assets/styles/tailwind.css';
import '~/app/globals.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'ForgeRealm',
  description = 'ForgeRealm powered by Astro'
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="dark" class="overflow-x-hidden">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="preload" as="image" href="/frowl.webp" />
  </head>
  <body class="min-h-[100dvh] md:min-h-[100svh] antialiased overflow-x-hidden" style={{ background: 'var(--background)', color: 'var(--foreground)' }}>
    <slot />
  </body>
</html>
