---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ShopNavbar from '../../components/ShopNavbar';
import RegisterForm from '../../components/RegisterForm';
---

<BaseLayout title="ForgeRealm Register" description="Create your ForgeRealm account">
  <ShopNavbar client:load />
  <main class="min-h-[100dvh] bg-slate-950 text-white px-5">
    <div class="h-24 md:h-28" />
     <section class="mx-auto flex w-full max-w-6xl flex-wrap rounded-3xl border border-white/10 bg-slate-900/60 shadow-2xl shadow-blue-500/10 overflow-hidden">
      <div class="flex w-full flex-col md:w-1/2 lg:w-1/3">
        <div class="flex justify-center pt-10 md:justify-start md:pl-10 mb-6 md:mb-8">
          <a href="/shop" class="border-b-4 border-b-blue-500 pb-2 text-2xl font-bold text-white hover:text-blue-200 transition-colors">
            ForgeRealm
          </a>
        </div>
        <div class="my-auto flex flex-col justify-center px-6 pt-8 sm:px-14 md:justify-start md:px-8 md:pt-4 lg:px-10">
          <p class="text-center text-3xl font-bold">Join the Realm</p>
          <p class="mt-2 text-center text-slate-300">Create your account to save favorites and shop.</p>
          <div class="pt-6 md:pt-10">
            <RegisterForm client:load />
          </div>
          <div class="pt-5 pb-5 text-center text-sm text-slate-300">
            <p class="whitespace-nowrap">
              Already have an account?
              <a href="/shop/sign-in" class="font-semibold underline hover:text-white"> Sign in here. </a>
            </p>
          </div>
        </div>
      </div>
      <div class="pointer-events-none hidden select-none bg-black/60 md:block md:w-1/2 lg:w-2/3">
        <img
          class="h-full w-full object-cover opacity-90"
          src="/reg.png"
          alt="ForgeRealm shop"
          loading="lazy"
        />
      </div>
    </section>
  </main>
</BaseLayout>
