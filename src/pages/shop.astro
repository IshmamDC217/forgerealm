---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="ForgeRealm Shop" description="Explore ForgeRealm products and collections.">
  <main class="min-h-screen bg-slate-950 text-white">
    {/* Hero */}
    <header class="relative overflow-hidden isolate">
      <picture>
        <source srcset="/shop-assets/hero.jpg" media="(max-width: 640px)" />
        <source srcset="/shop-assets/hero.jpg" media="(max-width: 768px)" />
        <source srcset="/shop-assets/hero.jpg" media="(max-width: 1024px)" />
        <source srcset="/shop-assets/hero.jpg" media="(max-width: 1280px)" />
        <source srcset="/shop-assets/hero.jpg" media="(min-width: 1281px)" />
        <img src="/shop-assets/hero.jpg" alt="ForgeRealm hero" class="w-full h-[420px] md:h-[520px] object-cover object-center" loading="lazy" />
      </picture>
      <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/35 to-transparent" />
      <div class="absolute inset-0 flex flex-col justify-end px-6 sm:px-10 pb-12 gap-4">
        <span class="w-fit rounded-full border border-white/30 bg-white/10 px-3 py-1 text-xs uppercase tracking-[0.25em] text-slate-200 shadow-sm">
          ForgeRealm Shop
        </span>
        <h1 class="text-4xl sm:text-5xl font-extrabold drop-shadow-lg max-w-2xl leading-tight">
          Time to suit up your space with 3D prints.
        </h1>
        <p class="text-slate-200/80 max-w-xl">
          Gradient lamps, fantasy figurines, and everyday accessories built with eco materials.
        </p>
        <button class="w-fit rounded-full bg-white text-blue-700 font-semibold px-5 py-3 text-sm uppercase tracking-wide hover:bg-blue-100 transition-colors shadow-lg shadow-blue-500/20">
          Shop now
        </button>
      </div>
    </header>

    {/* Featured carousel mock */}
    <section id="products" class="mx-auto max-w-6xl px-6 sm:px-10 py-16">
      <div class="flex items-center justify-between gap-4">
        <h2 class="text-2xl font-semibold">Popular right now</h2>
        <a href="#collections" class="text-sm uppercase tracking-wide text-blue-300 hover:text-white transition">View all</a>
      </div>
      <div class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {["Aurora Bloom Lamp", "Forest Dragon", "Dice Guardian"].map((name, idx) => (
          <article class="rounded-2xl bg-white/5 border border-white/10 overflow-hidden shadow-xl hover:border-blue-400 transition-colors backdrop-blur">
            <div class="relative overflow-hidden bg-slate-900 rounded-t-2xl aspect-[5/4] shadow-lg shadow-blue-500/10">
              <img
                src={idx === 0 ? "/owl.jpg" : idx === 1 ? "/dragon.jpg" : "/dice-dragon.jpg"}
                alt={name}
                class="absolute inset-0 h-full w-full object-cover object-center"
                loading="lazy"
              />
            </div>
            <div class="p-5 space-y-3">
              <p class="text-xs uppercase tracking-[0.25em] text-blue-300">Featured</p>
              <h3 class="text-lg font-semibold">{name}</h3>
              <p class="text-sm text-slate-300">Premium 3D printed piece, made with eco materials.</p>
              <div class="flex items-center justify-between pt-1">
                <span class="text-blue-200 font-semibold">Â£48.00</span>
                <button class="inline-flex items-center gap-2 rounded-full bg-blue-500 px-3.5 py-1.5 text-xs font-semibold uppercase tracking-wide hover:bg-blue-400 transition shadow-lg shadow-blue-500/20">
                  Add to cart
                </button>
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>

    {/* Collections */}
    <section id="collections" class="bg-slate-900/60 border-t border-white/10 py-16">
      <div class="mx-auto max-w-6xl px-6 sm:px-10 flex flex-col gap-10">
        <div class="flex items-center justify-between gap-4">
          <h2 class="text-2xl font-semibold">Collections</h2>
          <a href="#products" class="text-sm uppercase tracking-wide text-blue-300 hover:text-white transition">Shop popular</a>
        </div>
        <div class="grid gap-6 md:grid-cols-3">
          {[
            { title: "Figurines", blurb: "Dragons, owls, and fantasy props." },
            { title: "Lighting", blurb: "Gradient lamps and accent lighting." },
            { title: "Accessories", blurb: "Keychains, stands, desk pieces." },
          ].map((item) => (
            <article class="rounded-2xl bg-white/5 border border-white/10 p-5 backdrop-blur hover:border-blue-400 transition shadow-lg shadow-blue-500/10">
              <h3 class="text-xl font-semibold text-white">{item.title}</h3>
              <p class="mt-2 text-sm text-slate-300">{item.blurb}</p>
              <button class="mt-4 inline-flex items-center gap-2 text-sm uppercase tracking-wide text-blue-300 hover:text-white transition">
                Explore
              </button>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
